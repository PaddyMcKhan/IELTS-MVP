// prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// =====================
// NextAuth core models
// =====================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts      Account[]
  sessions      Session[]
  essayAttempts EssayAttempt[]
  essayDrafts   EssayDraft[]
  profile       UserProfile?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// =====================
// IELTS app models
// =====================

model EssayAttempt {
  id String @id @default(cuid())

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // IELTS context
  module       String // "academic" | "general"
  task         String // "task1" | "task2"
  questionId   String? @map("question_id") // matches TASKS[id]
  questionText String  @map("question_text")

  essay     String
  wordCount Int    @map("word_count")

  // AI band scores
  overallBand  Float? @map("overall_band")
  taskResponse Float? @map("task_response")
  coherence    Float?
  lexical      Float?
  grammar      Float?

  // whether Pro (gpt-4o) was used
  isPro Boolean @default(false) @map("is_pro")

  createdAt DateTime @default(now()) @map("created_at")

  @@map("essay_attempts")
}

model EssayDraft {
  id         String @id @default(cuid())
  userId     String @map("user_id")
  questionId String @map("question_id")
  content    String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, questionId])
  @@map("essay_drafts")
}

model WritingTask {
  id       Int    @id @default(autoincrement())
  taskType String @map("task_type") // e.g. "task2_academic"

  // Support all code paths used in /api/writing-tasks
  title           String? @map("title")
  prompt          String? @map("prompt")
  diagramUrl      String? @map("diagram_url")
  diagramImageUrl String? @map("diagram_image_url")
  diagramAlt      String? @map("diagram_alt")

  imageUrl  String?  @map("image_url")
  minWords  Int      @map("min_words")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("writing_tasks")
}

// =====================
// Profile & plan
// =====================

enum Plan {
  FREE
  PRO

  @@map("plan_type")
}

model Profile {
  userId     String   @id @db.Uuid @map("user_id")
  plan       Plan     @default(free)
  inviteCode String?  @unique @map("invite_code")
  invitedBy  String?  @db.Uuid @map("invited_by")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @default(now()) @map("updated_at")
}

